{
  // ---------------------------
  // Solidity Settings
  "solidity.compileUsingRemoteVersion": "v0.8.30",
  "solidity.defaultCompiler": "remote",
  "solidity.enabledAsYouTypeCompilationErrorCheck": true,
  "solidity.validationDelay": 1500,
  "solidity.packageDefaultDependenciesContractsDirectory": "src",
  "solidity.packageDefaultDependenciesDirectory": "lib",
  "solidity.remappings": [
    "@openzeppelin/contracts/=lib/openzeppelin-contracts/contracts/",
    "@uniswap/v4-core/=lib/v4-core/src/",
    "forge-std/=lib/forge-std/src/",
    "@uniswap/v4-periphery/=lib/v4-periphery/src/",
    "@uniswap/permit2/=lib/permit2/src/",
    "@uniswap/universal-router/=lib/universal-router/src/"
  ],

  // ---------------------------
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ---------------------------
  // Files & Associations
  "files.associations": {
    "*.sol": "solidity",
    ".env*": "env",
    ".env": "env"
  },
  "git.detectSubmodules": false,

  // ---------------------------
  // Language-Specific Settings

  // JuanBlanco
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },

  // ---------------------------
  // Extension Settings
  "emmet.useInlineCompletions": true,
  "prettier.configPath": "../.prettierrc.mjs",

  // ---------------------------
  // Cursor Settings
  "cursor.cpp.enablePartialAccepts": true
}
